{
  "name": "local-discovery",
  "version": "1.1.0",
  "description": "Simple agent discovery in your local network",
  "homepage": "https://github.com/LucaScorpion/local-discovery",
  "license": "MIT",
  "main": "src/index.ts",
  "repository": "github:LucaScorpion/local-discovery",
  "scripts": {
    "start": "ts-node-dev --respawn src/index.ts",
    "build:docker": "docker build -t lucascorpion/${npm_package_name}:dev .",
    "build": "tsc",
    "prettier": "prettier --write \"src/**/*.(ts)\"",
    "lint": "eslint . --ext .ts --fix",
    "format": "npm run prettier && npm run lint",
    "test": "jest"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@luca_scorpion/tinylogger": "^0.1.1",
    "express": "^4.17.1"
  },
  "eslintConfig": {
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "airbnb-typescript/base",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-plusplus": "off",
      "no-restricted-syntax": "off",
      "import/prefer-default-export": "off"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
